{
    "name": "pdf-merger",
    "version": "1.0.0",
    "description": "simple tool to merge a set of PDF's into a single file",
    "main": "index.js",
    "repository": "github:dshadowwolf/pdf-merging-tool",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "start": "electron .",
        "pack": "electron-builder --dir -wl --ia32 --x64",
        "dist": "electron-builder -wl --ia32 --x64",
        "postinstall": "electron-builder install-app-deps"
    },
    "author": "Daniel 'DShadowWolf' Hazelton",
    "license": "UNLICENSED",
    "build": {
        "appId": "com.electron.pdf-merger",
        "productName": "Simple PDF Merging Tool",
        "copyright": "Copyright Â© year Daniel 'DShadowWolf' Hazelton",
        "files": [
            "./static/**",
            "index.js",
            "./lib/**"
        ],
        "win": {
            "publish": [
                "github"
            ],
			"target": [
				"nsis",
				"zip",
				"7z"
			]
        },
		"linux": {
			"category": "Utility",
			"target": [
				"tar.xz",
				"tar.bz2",
				"AppImage",
				"snap"
			]
		},
		"nsis": {
			"oneClick": "false"
		},
		"snap": {
			"confinement": "strict",
			"grade": "devel"
		}
    },
    "devDependencies": {
        "electron": "^10.1.3",
        "electron-packager": "^15.1.0"
    },
    "dependencies": {
        "pdf-lib": "^1.11.1",
        "tmp-promise": "^3.0.2"
    }
}
